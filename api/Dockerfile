
# скачиваем на образ ноду 13 версии
FROM node:13.12.0-alpine 

#внутри образа создаём рабочую папку
WORKDIR /usr/src/app  

# коппируем образы файлов package.json в корневую директорию
COPY package*.json ./

# команда на установку всех npm пакетов
RUN npm install

#все файлы которые лежат в тек директории скоппировать внутрь контейнера
COPY . .

# на каком порту будем работать из докер контейнера для внешнего мира
# EXPOSE 3000

# Команда для запуска вебсервера
# CMD [ "node", "run start" ]