server {
    listen 80; 

    server_name counting-money.com;

    location / {
        proxy_pass http://frontend:3000;
    }

    location /api {
        proxy_pass http://api:3001;
        rewrite ^/api/(.*) /$1 break;
    }

    location /auth {
        proxy_pass http://auth:3002;
        rewrite ^/auth/(.*) /$1 break;
    }
}